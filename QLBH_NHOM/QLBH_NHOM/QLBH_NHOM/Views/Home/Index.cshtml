
@model List<QLBH_NHOM.Models.SANPHAM>
@*@model QLBH_NHOM.Models.BaseModel*@


<body>
    <div class="col-centered">
        <div class="container-fluid" >
            <div class="slide" style="position:relative;margin: 0 auto; width:1390px">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img height="640px" src="/Content/Images/54.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img height="640px" src="/Content/Images/40.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img height="640px" src="/Content/Images/32.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img height="640px" src="/Content/Images/41.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img height="640px" src="/Content/Images/18.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <div class="row arrow-link">
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

       

        <!-- Women Banner Section Begin -->
        <section class="women-banner spad">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <div class="filter-control">
                            <ul>
                                <li class="active">Sản phẩm bán chạy</li>
                            </ul>
                        </div>
                        <div class="product-slider owl-carousel">


                            @foreach (var pro in Model)
                            {
                                <div class="product-item">
                                    <div class="pi-pic">
                                        <img height="270px" src="~/Content/Images/@pro.LINK_HINHANH" alt="">
                                        <div class="sale">@pro.TENSP</div>
                                        <div class="icon">
                                            <i class="icon_heart_alt"></i>
                                        </div>
                                        <ul>
                                            <li class="w-icon active">
                                                <a href="#"data-add-to-cart="@pro.MASP"><i class="icon_bag_alt"></i></a>
                                            </li>
                                            <li class="quick-view"><a href="/Product/Index/@pro.MASP">Xem</a></li>
                                            <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="pi-text">
                                        @*<div class="catagory-name">@pro.mieuta</div>*@
                                        @*<a href="#">
                                                <h5>@pro.gioithieu</h5>
                                            </a>*@
                                        <div class="product-price">
                                            @String.Format("{0:0,0}", pro.GIAGIAM)đ <span>@String.Format("{0:0,0}", pro.DONGIA)đ</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
        </section>
        <!-- Women Banner Section End -->
        <section class="deal-of-week set-bg spad" data-setbg="/Content/Images/16.jpg" style="background-image;">
                <div class="container">
                    <div class="col-lg-6 text-center">
                        <div class="section-title">
                            <h2>Giảm Giá Hàng Tuần</h2>
                            <p>
                                Tất cả sản phẩm pizza đồng giá

                            </p>
                            <div class="product-price">
                                50.000đ
                                <span>/ Bánh</span>
                            </div>
                        </div>
                        <div class="countdown-timer" id="countdown"><div class="cd-item"><span>7</span> <p>Ngày</p> </div><div class="cd-item"><span>09</span> <p>Giờ</p> </div><div class="cd-item"><span>26</span> <p>Phút</p> </div><div class="cd-item"><span>04</span> <p>Giây</p> </div></div>
                        <a href="/Shop/Index" class="primary-btn">Shop Now</a>
                    </div>
                </div>
            </section>
            <section>
                <div class="benefit-items" style="position:relative;margin: 0 auto; width:1390px">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="single-benefit">
                                <div class="sb-icon">
                                    <img src="~/Content/img/icon/icon-1.png" />
                                </div>
                                <div class="sb-text">
                                    <h6>Miễn Phí Giao Hàng</h6>
                                    <p>Tất Cả Đơn Hàng Trên 300k</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="single-benefit">
                                <div class="sb-icon">
                                    <img src="~/Content/img/icon/icon-2.png" />
                                </div>
                                <div class="sb-text">
                                    <h6>Giao Hàng Tiện Lợi</h6>
                                    <p>Nhanh-Rẻ-Khỏe</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="single-benefit">
                                <div class="sb-icon">
                                    <img src="~/Content/img/icon/icon-3.png" />
                                </div>
                                <div class="sb-text">
                                    <h6>Thanh Toán Bằng Thẻ</h6>
                                    <p>An Toàn-Bảo Mật</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</body>
