
@{
    ViewBag.Title = "DangNhap";
}

    <body>

        <!-- Breadcrumb Section Begin -->
        @using (Html.BeginForm("DangNhap", "Account", FormMethod.Post, new { @class = "user", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <!-- Register Section Begin -->
            <div class="register-login-section spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 offset-lg-3">
                            <div class="login-form">
                                <h2>ĐĂNG NHẬP</h2>
                                <form action="#" method="post">
                                    <div class="key">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        <input type="text" name="TENDANGNHAP" class="form-control" placeholder="Tên đăng nhập">

                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="key">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                        <input type="password" name="MATKHAU" class="form-control" placeholder="Mật khẩu">

                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="form-group">
                                        <label>

                                        </label>
                                    </div>
                                    <center>
                                        <button type="submit" class="site-btn login-btn">Đăng Nhập</button>
                                    </center>


                                </form>
                                <div class="switch-login">
                                    <a href="../Account/DangKy" class="or-login">Bạn Chưa Có Tài Khoản???</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        } <!-- Register Form Section End -->
    </body>


