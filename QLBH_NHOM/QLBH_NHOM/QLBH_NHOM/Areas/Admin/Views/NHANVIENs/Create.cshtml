@model QLBH_NHOM.Models.NHANVIEN

@{
    Layout = "~/Areas/Admin/Views/Shared/ViewAdminChung.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <div class="container-fluid px-4">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
            <li class="breadcrumb-item active">Quản lý người dùng</li>
            <li class="breadcrumb-item active">Nhân viên</li>
            <li class="breadcrumb-item active">Thêm mới</li>
        </ol>
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings text-center">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" width="150px" alt="Maxwell Admin">
                                </div>
                                <h6 class="user-name mt-4">Mã nhân viên: ___</h6>
                                <h6>Họ tên nhân viên: ___</h6>
                            </div>
                            <div>
                                <p>
                                    Nghiệp vụ: ___
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                @using (Html.BeginForm("Create", "NHANVIENs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h4 class="mb-4 text-primary text-center">NHẬP THÔNG TIN CHI TIẾT</h4>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="fullName">Mã nhân viên: </label>
                                        <b>
                                            <input type="text" value="@ViewBag.MANV" disabled readonly class="form-control" />
                                           
                                            @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger" })
                                        </b>

                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="fullName">Họ tên nhân viên: </label>
                                        <b>
                                            @Html.EditorFor(model => model.HOTENNV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.HOTENNV, "", new { @class = "text-danger" })
                                        </b>

                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="website">Giới tính: </label>
                                        <div class="checkbox text-center">
                                            Nam  @Html.RadioButtonFor(model => model.GIOITINH, "True", new { @checked = "checked" })&nbsp;
                                            Nữ @Html.RadioButtonFor(model => model.GIOITINH, "False")
                                            @Html.ValidationMessageFor(model => model.GIOITINH, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="phone">Nghiệp vụ: </label>
                                        <div class="checkbox text-center">
                                            Admin @Html.RadioButtonFor(model => model.QUYENNV, "1", new { @checked = "checked" }) &nbsp;
                                            Duyệt  @Html.RadioButtonFor(model => model.QUYENNV, "2")&nbsp;
                                            Giao hàng @Html.RadioButtonFor(model => model.QUYENNV, "3")
                                            @Html.ValidationMessageFor(model => model.QUYENNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="eMail">Email: </label>
                                        <b>
                                            @Html.EditorFor(model => model.EMAIL_NV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.EMAIL_NV, "", new { @class = "text-danger" })
                                        </b>
                                    </div>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="phone">Số điện thoại: </label>
                                        <b>
                                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                        </b>
                                    </div>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="phone">Tên đăng nhập: </label>
                                        <b>
                                            @Html.EditorFor(model => model.TENDANGNHAP, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TENDANGNHAP, "", new { @class = "text-danger" })
                                        </b>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="phone">Mật khẩu: </label>
                                        <b>
                                            @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                                        </b>
                                    </div>
                                </div>

                            </div>



                        </div>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-center">
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Tạo mới" class="btn btn-default" />
                                            @Html.ActionLink("Trở về", "Index")
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                }

            </div>
        </div>
</body>
</html>


