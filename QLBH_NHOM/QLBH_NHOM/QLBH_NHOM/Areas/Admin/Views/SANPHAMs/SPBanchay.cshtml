@model IEnumerable<QLBH_NHOM.Models.SANPHAM>
@{
    int i = 0; string ttrang = "";
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/ViewAdminChung.cshtml";
    <link href="~/Content/css/table.css" rel="stylesheet" />
}
<!-- Page Heading -->
<div id="layoutSidenav_content container-fluid">
    <main>
        <div class="container-fluid px-4">

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                <li class="breadcrumb-item active">Quản lý sản phẩm</li>
                <li class="breadcrumb-item active">Món ăn</li>
            </ol>
            <h3 class="text-center text-uppercase">Danh sách món</h3>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="datatablesSimple" width="100%" cellspacing="0">
                            <thead style="background-color: #f0f2f5">
                                <tr>
                                    <th>STT</th>
                                    <th>
                                        Mã món ăn
                                    </th>
                                    <th>
                                        Tên món ăn
                                    </th>
                                    <th>
                                        Đơn giá
                                    </th>
                                    <th>
                                        Giá khuyến mãi
                                    </th>
                                    <th>
                                        Mô tả món
                                    </th>
                                    <th>
                                        Tình trạng
                                    </th>
                                    <th>
                                        Hình ảnh
                                    </th>
                                    <th>
                                        Nhóm
                                    </th>
                                    <th>Chức năng</th>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @{i++;} @i
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MASP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENSP)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DONGIA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GIAGIAM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MOTA)
                                        </td>
                                        <td>
                                            @{if (item.TINHTRANG == true)
                                                { ttrang = "Còn bán"; }
                                                else
                                                { ttrang = "Hết"; }

                                            }
                                            @ttrang
                                        </td>
                                        <td>
                                            <div id="anh"><img src="@Url.Content("~/Content/Images/"+item.LINK_HINHANH)" width="100" height="100" /></div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NHOMSANPHAM.TENNHOM)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit",
                        new { id = item.MASP})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="~/Content/img/edit.png" width="20" height="20" /></abbr></a>|
                                            <a href="@Url.Action("Details",
                 new { id = item.MASP })" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Content/img/details.png" width="20" height="20" /></abbr></a>|
                                            <a href="@Url.Action("Delete",
                new { id = item.MASP })" class="edit-btn"><abbr title="Xóa dữ liệu"><img src="~/Content/img/delete.png" width="20" height="20" /></abbr></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/Content/js2/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/Content/js2/datatables-simple-demo.js"></script>


