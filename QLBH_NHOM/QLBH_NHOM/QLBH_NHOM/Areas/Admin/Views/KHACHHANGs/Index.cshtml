@model IEnumerable<QLBH_NHOM.Models.KHACHHANG>
@{
    int i = 0;

    Layout = "~/Areas/Admin/Views/Shared/ViewAdminChung.cshtml";
    string gtinh = "";
    <link href="~/Content/css/table.css" rel="stylesheet" />

}


<!-- DataTales Example -->

<div id="layoutSidenav_content container-fluid">
    <main>
        <div class="container-fluid px-4">

            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                <li class="breadcrumb-item active">Quản lý người dùng</li>
                <li class="breadcrumb-item active">Khách hàng</li>
            </ol>
            <h3 class="text-center text-uppercase">Danh sách  khách hàng</h3>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="datatablesSimple" width="100%" cellspacing="0">
                            <thead style="background-color: #f0f2f5">
                                <tr>
                                    <th>STT</th>
                                    <th>Mã KH</th>
                                    <th>
                                        Họ tên KH
                                    </th>
                                    <th>
                                        Giới tính
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        SĐT
                                    </th>
                                    <th>
                                        Địa chỉ
                                    </th>

                                    <th>Chức năng</th>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @{i++;} @i
                                        </td>
                                        <td> @Html.DisplayFor(modelItem => item.MAKH)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENKH)
                                        </td>

                                        <td>
                                            @{if (item.GIOITINH == true)
                                                { gtinh = "Nam"; }
                                                else
                                                { gtinh = "Nữ"; }
                                            }
                                            @gtinh
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EMAIL_KH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SDT)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DIACHI)
                                        </td>


                                        <td>
                                            <a href="@Url.Action("Edit",
                        new { id = item.MAKH})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="~/Content/img/edit.png" width="20" height="20" /></abbr></a>|
                                            <a href="@Url.Action("Details",
                 new { id = item.MAKH})" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Content/img/details.png" width="20" height="20" /></abbr></a>|
                                            <a href="@Url.Action("Delete",
                new { id = item.MAKH })" class="edit-btn"><abbr title="Xóa dữ liệu"><img src="~/Content/img/delete.png" width="20" height="20" /></abbr></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/Content/js2/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/Content/js2/datatables-simple-demo.js"></script>


